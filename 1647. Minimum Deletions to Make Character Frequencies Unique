class Solution {
public:
    int minDeletions(string s) {
        if (s.empty()) return 0;
        vector<int> count(26);
        for (char &c:s) {
            count[c-'a']++;
        }
        multiset<int,greater<int>> ordered_count;
        for (auto i:count) {
            if (i > 0) ordered_count.insert(i);
        }
        int curr = *ordered_count.begin();
        int res = 0;
        for (auto it = ordered_count.begin(); it != ordered_count.end(); it++) {
            if (it == ordered_count.begin()) continue;
            if (*it >= curr) {
                curr = max(curr - 1, 0);
                res += *it - curr;
            }
            else curr = *it;
        }
        return res;
    }
};
